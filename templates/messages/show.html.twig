{% extends 'base2.html.twig' %}

{% block title %}Messages{% endblock %}

{% block body %}
    <h1>Messages</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ message.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ message.description }}</td>
            </tr>
            <tr>
                <th>ImagePath</th>
                <td>{{ message.imagePath }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ message.time ? message.time|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_messages_index') }}">back to list</a>

    <a href="{{ path('app_messages_edit', {'id': message.id}) }}">edit</a>

    {{ include('messages/_delete_form.html.twig') }}
{% endblock %}

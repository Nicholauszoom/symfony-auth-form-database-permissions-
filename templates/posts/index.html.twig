{% extends 'base2.html.twig' %}

{% block title %}Posts index{% endblock %}

{% block body %}

    <main class="flex-1 flex bg-gray-50 mx-auto">
        <section class="bg-gray-50 dark:bg-gray-50  w-full">
            <div class="mx-auto w-4/5 my-8">
                <a
                        href="{{ path('app_posts_new') }}"
                        class="uppercase border border-gray-500 text-lg py-4 px-6 rounded transition transition-all bg-gray-800 text-white hover:bg-white hover:text-gray-800">
                    Create New Post
                </a>
            </div>
            <div class="relative overflow-x-auto shadow-md sm:rounded-lg ">
                <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                    <tr>
                        <th scope="col" class="px-6 py-3">
                            ID
                        </th>
                        <th scope="col" class="px-6 py-3">
                            TITLE
                        </th>
                        <th scope="col" class="px-6 py-3">
                            DESCRIPTION
                        </th>
                        <th scope="col" class="px-6 py-3">
                            POSTED AT
                        </th>
                        <th scope="col" class="px-6 py-3">

                        </th>


                    </tr>
                    </thead>
                    {% for post in posts %}
                        <tbody>
                        <tr class="bg-white border-b dark:bg-gray-900 dark:border-gray-700">
                            <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                                {{ post.id }}
                            </th>
                            <td class="px-6 py-4">
                                {{ post.title }}
                            </td>
                            <td class="px-6 py-4">
                                {{ post.description }}
                            </td>
                            <td class="px-6 py-4">
                                {{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}
                            </td>
                            <td class="px-6 py-4">
                                <a
                                        href="{{ path('app_posts_show', {'id': post.id}) }}"
                                        class="bg-blue-500 font-bold py-2 px-4 rounded transition-all hover:bg-blue-300">
                                    Show
                                </a>
                            </td>

                        </tr>



                        {% else %}
                            <tr>
                                <td colspan="6">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>

                </table>
{#                <a href="{{ path('app_posts_new') }}">Create new post</a>#}
            </div>
        </section>
    </main>


{% endblock %}



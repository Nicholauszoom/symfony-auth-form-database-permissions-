{% extends 'base2.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="w-4/5 m-auto text-center">
        <div class="py-6 border-b border-gray-200">
            <h1 class="text-6xl pt-6 pb-5">
                Register Staff
            </h1>
            <a
                    href="{{ path('app_users') }}"
                    class="uppercase border border-gray-500 text-lg py-4 px-6 rounded transition transition-all bg-gray-800 text-white hover:bg-white hover:text-gray-800">
                back to list
            </a>


            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.firstName) }}
                {{ form_row(registrationForm.lastName) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword) }}
                 {{ form_row(registrationForm.imagePath) }}
            
            {{ form_row(registrationForm.agreeTerms) }}
            
            <button 
                type="submit" 
                class="uppercase mt-15 bg-blue-500 text-gray-100 text-lg w-1/5 mt-10 font-extrabold py-4 px-8 rounded-3xl">
                Register
            </button>

            
            {{ form_end(registrationForm) }}

        </div>
    </div>
{% endblock %}